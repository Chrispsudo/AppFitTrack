<Window x:Class="AppFitTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppFitTrack"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="FitTrack" FontSize="36" FontFamily="Arial" Foreground="Crimson" HorizontalAlignment="Center" Margin="0,30,0,0"/>
        <TextBox Name="UsernameBox" Margin="200,100,200,0" Height="30"/>
        <PasswordBox Name="PasswordBox" Margin="200,150,200,0" Height="30"/>
        <Button Content="Sign In" Margin="200,200,200,0" Height="30" Click="SignIn_Click"/>
        <Button Content="Register" Margin="200,250,200,0" Height="30" Click="Register_Click"/>

    </Grid>
</Window>
